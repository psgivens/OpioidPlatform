{
  "name": "opioid",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build-css": "node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/ --watch --recursive",
    "start-ts": "react-scripts-ts start",
    "start": "npm-run-all -p watch-css start-ts",
    "build-ts": "react-scripts-ts build",
    "build": "npm-run-all build-css build-ts",
    "test": "react-scripts-ts test --env=jsdom",
    "eject": "## react-scripts-ts eject"
  },
  "dependencies": {
    "bulma": "^0.7.2",
    "d3": "^5.5.0",
    "markdown-it": "^8.4.2",
    "moment": "^2.22.2",
    "npm-run-all": "^4.1.3",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "react-helmet": "^5.2.0",
    "react-redux": "^5.0.7",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "react-scripts-ts": "3.1.0",
    "reduce-reducers": "^0.4.3",
    "redux": "^4.0.0",
    "redux-saga": "^0.16.0",
    "styled-components": "^3.4.2",
    "ts-jest": "^23.10.2",
    "typed-web-workers": "^2.1.1"
  },
  "devDependencies": {
    "@types/d3": "^5.0.0",
    "@types/jest": "^23.3.2",
    "@types/markdown-it": "0.0.6",
    "@types/node": "^10.11.3",
    "@types/react": "^16.4.18",
    "@types/react-dom": "^16.0.9",
    "@types/react-redux": "^6.0.5",
    "@types/react-router": "^4.0.30",
    "@types/react-router-dom": "^4.3.0",
    "@types/reduce-reducers": "^0.1.3",
    "@types/redux": "^3.6.0",
    "@types/redux-saga": "^0.10.5",
    "node-sass-chokidar": "^1.3.3",
    "typescript": "^3.1.1"
  }
}
